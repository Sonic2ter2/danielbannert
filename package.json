{
    "name": "danielbannert",
    "version": "0.0.0",
    "private": true,
    "description": "My personal website",
    "scripts": {
        "build": "tsc && cross-env NODE_ENV='production' vite build && cross-env NODE_ENV='production' vite build --ssr && cross-env NODE_ENV='production' vite-plugin-ssr prerender",
        "postbuild": "react-snap",
        "build:github-list": "esno ./bin/generate-github-projects-list.ts",
        "clean": "rm -rf node_modules && rm -rf dist",
        "commit": "cz",
        "dev": "esno ./server",
        "lint": "pnpm run lint:text && pnpm run lint:prettier && pnpm run lint:eslint",
        "lint:eslint": "cross-env NO_LOGS=true eslint . --ext js,jsx,ts,tsx --max-warnings=0 --config .eslintrc.cjs --cache --cache-strategy content .",
        "lint:eslint:fix": "pnpm run lint:eslint --fix",
        "lint:prettier": "prettier --config=.prettierrc.cjs '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --parallel --experimental --dry-run",
        "lint:text:fix": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --parallel --experimental --fix",
        "prepare": "is-ci || (node verify-node-version.cjs && pnpx only-allow pnpm && husky install)",
        "prod": "pnpm run build && pnpm run server:prod",
        "serve": "vite preview",
        "server:prod": "cross-env NODE_ENV=production esno ./server",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@headlessui/react": "^1.6.5",
        "@octokit/rest": "^18.12.0",
        "compression": "^1.7.4",
        "emojilib": "^3.0.6",
        "esno": "^0.16.3",
        "express": "^4.18.1",
        "nprogress": "^0.2.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-helmet-async": "^1.3.0",
        "unicode-emoji-json": "^0.3.1",
        "vite-plugin-favicon2": "^1.1.4",
        "vite-plugin-ssr": "^0.3.64",
        "vite-plugin-static-copy": "^0.5.1"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^4.0.8",
        "@anolilab/prettier-config": "^3.0.1",
        "@anolilab/semantic-release-preset": "^2.0.6",
        "@anolilab/textlint-config": "^4.0.4",
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@tailwindcss/typography": "^0.5.2",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.13",
        "@types/gravatar": "^1.8.3",
        "@types/lodash.capitalize": "^4.2.7",
        "@types/node": "^18.0.0",
        "@types/nprogress": "^0.2.0",
        "@types/react": "^18.0.14",
        "@types/react-dom": "^18.0.5",
        "@types/react-helmet": "6.1.5",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "@vitejs/plugin-react": "^1.3.2",
        "autoprefixer": "^10.4.7",
        "c8": "^7.11.3",
        "commitizen": "^4.2.4",
        "cross-env": "^7.0.3",
        "cssnano": "^5.1.12",
        "eslint": "^8.18.0",
        "eslint-define-config": "^1.5.1",
        "eslint-plugin-editorconfig": "^3.2.0",
        "eslint-plugin-json": "^3.1.0",
        "husky": "^8.0.1",
        "is-ci": "^3.0.1",
        "lint-staged": "^13.0.2",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "prettier": "^2.7.1",
        "semantic-release": "^19.0.3",
        "serve": "^13.0.2",
        "tailwindcss": "^3.1.3",
        "textlint": "^12.1.1",
        "typescript": "^4.7.4",
        "vite": "^2.9.12",
        "vitest": "^0.15.1"
    },
    "reactSnap": {
        "source": "dist"
    }
}
